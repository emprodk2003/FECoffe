<Window x:Class="FECoffe.Dashboards.Product"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FECoffe.Dashboards"
        mc:Ignorable="d"
        Title="Product" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Background" Value="#FFE1F5F5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FFCEF8F5"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                 Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="{TemplateBinding BorderThickness}"
                 CornerRadius="6,6,0,0"
                 Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ToggleButton dùng trong ComboBox -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border"
                 Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="1"
                 CornerRadius="4"
                 />
                <Path x:Name="Arrow"
               Grid.Column="1"
               Fill="Gray"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>

        <!-- Style cho ComboBox -->
        <Style TargetType="ComboBox" x:Key="RoundedComboBox">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                   Template="{StaticResource ComboBoxToggleButton}"
                                   Grid.Column="2"
                                   Focusable="false"
                                   IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                   ClickMode="Press"
                                   Background="{TemplateBinding Background}"
                                   BorderBrush="{TemplateBinding BorderBrush}"
                                   BorderThickness="{TemplateBinding BorderThickness}" />
                            <ContentPresenter Name="ContentSite"
                                       IsHitTestVisible="False"
                                       Content="{TemplateBinding SelectionBoxItem}"
                                       ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                       ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                       Margin="6,2,30,2"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"/>
                            <Popup Name="Popup"
                            Placement="Bottom"
                            IsOpen="{TemplateBinding IsDropDownOpen}"
                            AllowsTransparency="True"
                            Focusable="False"
                            PopupAnimation="Slide">
                                <Grid Name="DropDown"
                               SnapsToDevicePixels="True"
                               MinWidth="{TemplateBinding ActualWidth}"
                               MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                     Background="White"
                                     BorderBrush="#CCC"
                                     BorderThickness="1"
                                     CornerRadius="4"/>
                                    <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True"
                                             KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF54D0FF"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl >
            <!-- Tab: Quản lý danh mục thực đơn -->
            <TabItem Header="Danh mục thực đơn">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="0,0,10,0" Height="35" Width="100"/>
                        <TextBox x:Name="txt_FindCate" Width="200" Margin="0,0,10,0"/>
                        <Button Click="FindCate_Click" Content="Tìm" Margin="0,0,10,0"/>
                        <Button Content="Thêm" Click="themCateProduct_Click" Margin="0,0,10,0"/>
                        <Button Margin="10,0,10,0" Click="LoadData_Click" FontFamily="Segoe MDL2 Assets" FontSize="18">
                            &#xE72C;
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="dgCategories_Product" ItemsSource="{Binding Categories_ProductViewModel}" IsReadOnly="True" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên danh mục" Binding="{Binding CategoryName}" />
                            <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" />
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" FontSize="12"  Margin="0,0,5,0" x:Name="edit_cateproduct" Click="edit_cateproduct_Click"/>
                                            <Button Content="Xóa" Background="Red" FontSize="12" x:Name="delete_cateproduct" Click="delete_cateproduct_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Tab: Quản lý thực đơn -->
            <TabItem Header="Thực đơn">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="0,0,10,0" Height="35" Width="100"/>
                        <TextBox Width="200" x:Name="txt_FindName_Product"  Margin="0,0,10,0"/>
                        <ComboBox Width="200" x:Name="cbCategories" DisplayMemberPath="CategoryName"
                                                                    SelectedValuePath="CategoryID"
                                                                    Margin="0,0,10,0" />
                        <Button Content="Tìm"  Click="FindProduct_Click" Margin="0,0,10,0"/>
                        <Button Content="Thêm" Click="themProduct_Click"/>
                        <Button Margin="10,0,10,0" Click="LoadData_Click" FontFamily="Segoe MDL2 Assets" FontSize="18">
                            &#xE72C;
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="dg_Product" ItemsSource="{Binding ProductViewModel}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên món" Binding="{Binding ProductName}"/>
                            <DataGridTextColumn Header="Giá" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Danh mục" Binding="{Binding Category_Name}"/>
                            <DataGridTextColumn Header="Gia von" Binding="{Binding CostPrice}"/>
                            <DataGridTextColumn Header="Gia ban" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Ghi chu" Binding="{Binding Description}"/>
                            <DataGridTextColumn Header="Trang thai" Binding="{Binding Trangthai}"/>
                            <DataGridTextColumn Header="Hinh anh" Binding="{Binding UrlImg}"/>
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" FontSize="12"  Margin="0,0,5,0" x:Name="edit_Product" Click="edit_cProduct_Click"/>
                                            <Button Content="Xóa" Background="Red" FontSize="12" x:Name="delete_Product" Click="delete_Product_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Header="Topping">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="0,0,10,0" Height="35" Width="100"/>
                        <TextBlock Text="Ten topping: " Margin="5,2,0,0" Foreground="Gray"/>
                        <TextBox Width="200" x:Name="txt_FindTopping"  Margin="0,0,10,0"/>
                        <Button Content="Tìm" Click="FindTopping_Click" Margin="0,0,10,0"/>
                        <Button Content="Thêm" Click="ThemTopping_CLick"/>
                        <Button Margin="10,0,10,0" Click="LoadData_Click" FontFamily="Segoe MDL2 Assets" FontSize="18">
                            &#xE72C;
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="dg_Topping" ItemsSource="{Binding ToppingViewModel}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên Topping" Binding="{Binding ToppingName}"/>
                            <DataGridTextColumn Header="Don gia" Binding="{Binding Price}"/>
                            <DataGridTextColumn Header="Trang thai" Binding="{Binding Trangthai}"/>
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" FontSize="12"  Margin="0,0,5,0" x:Name="edit_Topping" Click="edit_Topping_Click"/>
                                            <Button Content="Xóa" Background="Red" FontSize="12" x:Name="delete_Topping" Click="delete_Topping_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Tab: Quản lý kích cỡ món -->
            <TabItem Header="Kích cỡ món">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="10" Height="35" Width="100"/>
                        <ComboBox Width="250" x:Name="cb_Productsize"
                               DisplayMemberPath="ProductName"
                               SelectedValuePath="ProductID"
                               Margin="0,0,10,0"/>
                        <Button Click="GetSizeByProduct_Click" Content="Tìm" Margin="0,0,10,0"/>
                        <Button Click="themSize_Click" Content="Thêm"/>
                        <Button Margin="10,0,10,0" Click="LoadData_Size_Click" FontFamily="Segoe MDL2 Assets" FontSize="18">
                            &#xE72C;
                        </Button>
                    </StackPanel>
                    <DataGrid IsReadOnly="True" x:Name="dg_ProductSize" ItemsSource="{Binding ProductSizeViewModel}" AutoGenerateColumns="False" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên món" Binding="{Binding ProductName}"/>
                            <DataGridTextColumn Header="Kích cỡ" Binding="{Binding SizeName}"/>
                            <DataGridTextColumn Header="Giá phụ thu" Binding="{Binding AdditionalPrice}"/>
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" FontSize="12"  Margin="0,0,5,0" x:Name="edit_ProductSize" Click="edit_ProductSize_Click"/>
                                            <Button Content="Xóa" Background="Red" FontSize="12" x:Name="delete_ProductSize" Click="delete_ProductSize_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Tab: Quản lý bàn -->
            <TabItem Header="Quản lý bàn">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="0,0,10,0" Height="35" Width="100"/>
                        <TextBox Width="200" x:Name="txt_FindTable" Margin="0,0,10,0"/>
                        <Button Content="Tìm" Click="FindTable_CLick" Margin="0,0,10,0"/>
                        <Button Content="Thêm" Click="themTable_Click"/>
                        <Button Margin="10,0,10,0" Click="LoadData_Click" FontFamily="Segoe MDL2 Assets" FontSize="18">
                            &#xE72C;
                        </Button>
                    </StackPanel>
                    <DataGrid x:Name="dg_Table" ItemsSource="{Binding TableViewModel}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên bàn" Binding="{Binding TableName}"/>
                            <DataGridTextColumn Header="Trạng thái" Binding="{Binding trangthai}"/>
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" FontSize="12"  Margin="0,0,5,0" x:Name="edit_Table" Click="edit_Table_Click"/>
                                            <Button Content="Xóa" Background="Red" FontSize="12" x:Name="delete_Table" Click="delete_Table_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Tab: Công thức chế biến -->
            <TabItem Header="Công thức">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                        <Button Content="← Trang chủ" HorizontalAlignment="Left" VerticalAlignment="Top" 
Margin="0,0,10,0" Height="35" Width="100"/>
                        <TextBlock Text="Chọn món: " Margin="5,2,0,0" Foreground="Gray"/>
                        <ComboBox Width="200"
                               Margin="0,0,10,0"
                               ItemsSource="{Binding Products}"
                               SelectedItem="{Binding SelectedProduct}"
                               DisplayMemberPath="ProductName"/>
                        <TextBlock Text="Chọn kích cỡ: " Margin="5,2,0,0" Foreground="Gray"/>
                        <ComboBox Width="150"
                               Margin="0,0,10,0"
                               ItemsSource="{Binding ProductSizes}"
                               SelectedItem="{Binding SelectedProductSize}"
                               DisplayMemberPath="SizeName"/>
                        <Button Content="Tìm" Margin="0,0,10,0"/>
                        <Button Content="Thêm"/>
                    </StackPanel>
                    <DataGrid AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tên món" Binding="{Binding Product.ProductName}"/>
                            <DataGridTextColumn Header="Nguyên vật liệu" Binding="{Binding Material.MaterialName}"/>
                            <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}"/>
                            <DataGridTemplateColumn Header="Hành động" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="Sửa" Margin="0,0,5,0"/>
                                            <Button Content="Xóa"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
