<Window x:Class="FECoffe.AppUsed.TheBagNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FECoffe.AppUsed"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:local1="clr-namespace:FECoffe.DTO"
        mc:Ignorable="d"
        Title="MenuAndOrder" Height="800" Width="1200" Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Style cho các trạng thái bàn ăn -->
        <Style x:Key="FreeTableStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="BorderBrush" Value="#FF388E3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <Style x:Key="OccupiedTableStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFF44336"/>
            <Setter Property="BorderBrush" Value="#FFD32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>

        <!-- Style chung cho nút bàn ăn -->
        <Style x:Key="TableButtonStyle" TargetType="Button">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- TabControl Style -->
        <Style TargetType="TabControl">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="6,6,0,0"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#1976D2"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="MinWidth" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF3EBAF5"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Padding" Value="6"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#DDDDDD"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid >
        <TabControl>
            <!-- Tab: Quản lý hàng -->
            <TabItem Header="Ban Hang">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 20">
                        <TextBlock Text="BÀN ĂN" FontSize="24" FontWeight="Bold" Foreground="#FF333333"/>
                    </StackPanel>
                    <!-- Legend (Chú thích) -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- ComboBox bên trái -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">
                            <ComboBox Width="200" Margin="0 0 10 0" SelectedIndex="0" Foreground="Black">
                                <ComboBoxItem Content="Tất cả bàn"/>
                                <ComboBoxItem Content="Bàn trống"/>
                                <ComboBoxItem Content="Bàn đang dùng"/>
                                <ComboBoxItem Content="Bàn đã đặt"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Chú thích bên phải -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1">
                            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                                <Border Width="20" Height="20" Background="#FF4CAF50" CornerRadius="4" Margin="0 0 5 0"/>
                                <TextBlock Text="Bàn trống" VerticalAlignment="Center" Width="150" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 10 0">
                                <Border Width="20" Height="20" Background="#FFF44336" CornerRadius="4" Margin="0 0 5 0"/>
                                <TextBlock Text="Bàn đang chuẩn bị món" VerticalAlignment="Center" Width="150" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- Main content - Grid of tables -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="TablesItemsControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" Rows="0"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource TableButtonStyle}" 
                                                Width="150" Height="150" Margin="10"
                                                MouseRightButtonUp="numbertag_MouseRightButtonUp"
                                                Command="{Binding DataContext.TableSelectedCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                x:Name="numbertag" Click="numbertag_Click">   
                                        <Button.Background>
                                            <Binding Path="Status">
                                                <Binding.Converter>
                                                    <local1:TableStatusToColorConverter 
                                                            AvailableColor="#FF4CAF50"
                                                            OccupiedColor="#FFF44336"
                                                            OutOfServiceColor="#FF9E9E9E" 
                                                     />
                                                </Binding.Converter>
                                            </Binding>
                                        </Button.Background>

                                        <StackPanel>
                                            <TextBlock Text="{Binding TableID}" FontSize="24" Foreground="White" HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding TableName}" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="0 5 0 0"/>
                                            <TextBlock Text="{Binding trangthai}" FontSize="14" Foreground="White" HorizontalAlignment="Center" Margin="0 5 0 0"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Thong Ke">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Doanh Thu Ngày Hôm Nay: " FontWeight="Bold" VerticalAlignment="Center" Foreground="Black"/>
                        <TextBox Text="{Binding DoanhThu, StringFormat={}{0:N0} đ}" 
                             IsReadOnly="True" 
                             BorderThickness="0" 
                             Background="Transparent" 
                             VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Bảng dữ liệu -->
                    <DataGrid x:Name="dgInventoryLogs" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ngày " Binding="{Binding ChangeDate}" Width="140"/>
                            <DataGridTextColumn Header="Ma Don" Binding="{Binding Materials.MaterialName}" Width="*"/>
                            <DataGridTextColumn Header="Tong Tien" Binding="{Binding ChangeType}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
