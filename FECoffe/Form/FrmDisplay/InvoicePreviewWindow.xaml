<Window x:Class="FECoffe.Form.FrmDisplay.InvoicePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FECoffe.Form.FrmDisplay"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        Title="InvoicePreviewWindow" Height="600" Width="250">
    <DockPanel>
        <ToolBar DockPanel.Dock="Top" HorizontalAlignment="Right">
            <Button Content="In hóa đơn" Click="Print_Click" Padding="10,5" Margin="5"/>
        </ToolBar>

        <FlowDocumentScrollViewer x:Name="docViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  Margin="10"/>
    </DockPanel>
</Window>
