<Window x:Class="FECoffe.Form.Frm_CreateQR"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FECoffe.Form"
        mc:Ignorable="d"
        Title="Frm_CreateQR"
        Height="650"
        Width="490"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>
        <!-- Style cho TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin"
                    Value="0,4" />
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="BorderBrush"
                    Value="#ccc" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="Height"
                    Value="32" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer Margin="0"
                                          x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Button -->
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
            <Setter Property="Padding"
                    Value="6" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="Foreground"
                    Value="White" />
            <Setter Property="Background"
                    Value="#007ACC" />
            <Setter Property="BorderBrush"
                    Value="#007ACC" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Height"
                    Value="36" />
            <Setter Property="Width"
                    Value="100" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Tao QR Thanh Toan Cho Khach Hang"
                   FontSize="18"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Margin="0,0,0,5" />

        <StackPanel Grid.Row="1"
                    Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal"
                        Margin="0,5">
                <TextBlock Text="Tên Ngân Hàng:"
                           Width="100"
                           VerticalAlignment="Center" />
                <ComboBox x:Name="cbBank"
                         Width="250"
                          DisplayMemberPath="name"
                          SelectedValuePath="id" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,5">
                <TextBlock Text="Số tài khoản:"
                           Width="100"
                           VerticalAlignment="Center" />
                <TextBox x:Name="txtNumberAccountBank"
                         Width="250" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,5">
                <TextBlock Text="Số tiền:"
                           Width="100"
                           VerticalAlignment="Center" />
                <TextBox x:Name="txtAmount"
                         Width="250" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,5">
                <TextBlock Text="Tên tài khoản:"
                           Width="100"
                           VerticalAlignment="Center" />
                <TextBox x:Name="txtAccountBank"
                         Width="250" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,5">
                <TextBlock Text="Nội dung:"
                           Width="100"
                           VerticalAlignment="Center" />
                <TextBox x:Name="txtContent"
                         Width="250" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Border x:Name="borderQR" >
                <Image x:Name="anhQR">
                    
                </Image>
                
            </Border>   
            
        </StackPanel>
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Tạo QR"
                    Width="80"
                    Margin="5"
                    x:Name="createQR"
                    Click="createQR_Click"
                     />
            <Button Content="Chuyen Thanh Tien Mat"
                    Width="150"
                    Margin="5"
                    x:Name="cash"
                    Click="cash_Click" />
            <Button Content="Xac Nhan"
                    Width="100"
                    Margin="5"
                    x:Name="submit"
                    Click="submit_Click" />
            <Button Content="Hủy"
                    Width="100"
                    Margin="5"
                    x:Name="huy"
                     />
        </StackPanel>
    </Grid>
</Window>
